<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Hyperlink | Local Services</title>
    <link rel="stylesheet" href="./styles/home.css" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/cropperjs/dist/cropper.css"
    />
  </head>
  <body>
    <!-- HEADER -->
    <header class="header">
      <div class="logo">Hyperlink</div>

      <div class="header-right">
        <select class="area-select">
          <option>Select Area</option>
          <option>Kolkata</option>
          <option>Howrah</option>
          <option>Salt Lake</option>
        </select>
        <button class="location-btn">üìç Use My Location</button>

        <!-- PROFILE BUTTON -->
        <div class="profile-trigger" id="openProfile">
          <img src="<%= user.profile_pic %>" alt="Profile" />
          <span class="hamburger">‚ò∞</span>
        </div>
      </div>
    </header>

    <!-- PROFILE SIDEBAR -->
    <aside class="profile-sidebar" id="profileSidebar">
      <div class="sidebar-header">
        <img
          src="<%= user.profile_pic %>"
          id="profileImage"
          class="profile-large"
        />
        <h3><%= user.name %></h3>
        <p>Local User</p>
      </div>

      <div class="profile-actions">
        <button id="changePic">Change Profile Picture</button>
        <button id="removePic" class="danger">Remove Profile Picture</button>
      </div>

      <input type="file" id="fileInput" accept="image/*" hidden />

      <ul class="sidebar-menu">
        <li>Edit Profile</li>
        <li>My Bookings</li>
        <li>Saved Services</li>
        <li class="danger">Logout</li>
      </ul>
    </aside>

    <div class="overlay" id="overlay"></div>

    <!-- SEARCH -->
    <div class="search-container">
      <input
        type="text"
        placeholder="Search services like plumber, tutor, carpenter..."
        class="search-input"
      />
    </div>

    <!-- MAIN -->
    <div class="main">
      <aside class="services">
        <h3>Our Services</h3>
        <ul>
          <li>Plumber</li>
          <li>Carpenter</li>
          <li>Tutor</li>
          <li>Maid</li>
          <li>Electrician</li>
          <li>Painter</li>
        </ul>
      </aside>

      <section class="content">
        <div class="service-results">
          <div class="service-card">Plumber near you</div>
          <div class="service-card">Carpenter near you</div>
          <div class="service-card">Home Tutor available</div>
        </div>

        <div class="map-container">
          <iframe
            src="https://www.google.com/maps?q=kolkata&output=embed"
            loading="lazy"
          ></iframe>
        </div>
      </section>
    </div> 
 


    <div id="cropModal" class="crop-modal">
      <img id="cropImage" />
      <button type="button" id="uploadCropped">Upload</button>
    </div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" />

<script src="/scripts/profile.js"></script>

</body>
</html>
 